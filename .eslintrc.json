{
    "env": {
        "browser": true,
        "es2017": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "prettier",
        "plugin:prettier/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier",
        "import-helpers",
        "eslint-plugin-import-helpers"
    ],
    "rules": {
        "prettier/prettier": "error",
        "no-new": "off",
        "import/no-unresolved": "off",
        "no-underscore-dangle": "off",
        "class-methods-use-this": "off",
        "no-await-in-loop": "off",
        "no-console": "off",
        "camelcase": "off",
        "@typescript-eslint/ban-types": "warn",
        "import/prefer-default-export": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "ts": "never"
            }
        ]
    },
    "settings": {
        "import/extensions": [
            ".ts",
            ".js"
        ],
        "import/parsers": {
            "@typescript-eslint/parser": [
                ".ts",
                ".js"
            ]
        },
        "import/resolver": {
            "typescript": {}
        }
    }
}
